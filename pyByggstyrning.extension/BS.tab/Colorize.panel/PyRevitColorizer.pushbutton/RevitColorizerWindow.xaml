<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PyRevit Colorizer" 
    Height="650" 
    Width="750"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    ShowInTaskbar="True">
    
    <Window.Resources>
        <ResourceDictionary>
            <!-- Common Styles -->
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Background" Value="#F0F0F0"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
            </Style>
            <Style TargetType="{x:Type ComboBox}">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="IsEditable" Value="False"/>
                <Setter Property="IsTextSearchEnabled" Value="True"/>
                <Setter Property="IsSynchronizedWithCurrentItem" Value="True"/>
            </Style>
            <Style TargetType="{x:Type ListBox}">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
            </Style>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="Margin" Value="5,5,5,2"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>
            <Style TargetType="{x:Type CheckBox}">
                <Setter Property="Margin" Value="5,3"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="{x:Type RadioButton}">
                <Setter Property="Margin" Value="5,3"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            
            <!-- Toggle Switch Style -->
            <Style x:Key="ToggleSwitchStyle" TargetType="{x:Type CheckBox}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type CheckBox}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="SwitchBorder" 
                                        Width="40" Height="20" 
                                        CornerRadius="10" 
                                        Background="#CCCCCC" 
                                        Margin="0,0,5,0">
                                    <Ellipse x:Name="SwitchKnob" 
                                             Width="16" Height="16" 
                                             HorizontalAlignment="Left" 
                                             Margin="2,0,0,0" 
                                             Fill="White"/>
                                </Border>
                                <TextBlock Grid.Column="1" 
                                           Text="{TemplateBinding Content}" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="SwitchBorder" Property="Background" Value="#4CAF50"/>
                                    <Setter TargetName="SwitchKnob" Property="HorizontalAlignment" Value="Right"/>
                                    <Setter TargetName="SwitchKnob" Property="Margin" Value="0,0,2,0"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter Property="Content" Value="OFF"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Content" Value="ON"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" MinHeight="50"/>
        </Grid.RowDefinitions>
        
        <!-- Header with title and icons -->
        <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="#0066cc" Background="#F0F0F0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Color Elements" FontSize="16" FontWeight="Bold" Margin="10,10" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="?" Width="24" Height="24" Margin="5,0" ToolTip="Help" BorderThickness="0" Background="Transparent"/>
                    <Button Content="×" Width="24" Height="24" Margin="5,0" ToolTip="Close" BorderThickness="0" Background="Transparent" Name="closeButton"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Settings -->
        <Grid Grid.Row="1" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Setting:" VerticalAlignment="Center"/>
            <ComboBox Grid.Column="1" x:Name="settingsComboBox" Margin="5,0">
                <ComboBoxItem Content="&lt;Default&gt;" IsSelected="True"/>
            </ComboBox>
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="🔄" Width="28" Height="28" Margin="2,0" ToolTip="Refresh"/>
                <Button Content="💾" Width="28" Height="28" Margin="2,0" ToolTip="Save Settings" x:Name="saveButton"/>
                <Button Content="📂" Width="28" Height="28" Margin="2,0" ToolTip="Load Settings" x:Name="loadButton"/>
                <Button Content="🗑️" Width="28" Height="28" Margin="2,0" ToolTip="Delete Settings"/>
            </StackPanel>
        </Grid>
        
        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Categories -->
            <Border BorderThickness="1" BorderBrush="#CCCCCC" Margin="10,5,5,5">
                <DockPanel>
                    <TextBlock Text="Category" FontWeight="SemiBold" Margin="5" DockPanel.Dock="Top"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="categoryListBox" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="Transparent">
                                        <CheckBox Content="{Binding name}" Tag="{Binding}" IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="2,0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </ScrollViewer>
                </DockPanel>
            </Border>
            
            <!-- Right Panel - Parameters and Values -->
            <Grid Grid.Column="1" Margin="5,5,10,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Parameter Type Selection -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <RadioButton x:Name="instanceRadioButton" Content="Instance" IsChecked="True" Margin="5"/>
                    <RadioButton x:Name="typeRadioButton" Content="Type" Margin="15,5,5,5"/>
                </StackPanel>
                
                <!-- Parameter Selection -->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="parameterSelector" Margin="0"/>
                    <Button Grid.Column="1" Content="🔄" Width="28" Margin="5,0,0,0" ToolTip="Refresh Parameters"/>
                </Grid>
                
                <!-- Values and Colors -->
                <Border Grid.Row="2" BorderThickness="1" BorderBrush="#CCCCCC">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Grid Background="#F5F5F5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="70"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox Margin="10,5"/>
                            <TextBlock Grid.Column="1" Text="Value" Margin="5"/>
                            <TextBlock Grid.Column="2" Text="Color" Margin="5" HorizontalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Values -->
                        <ListBox Grid.Row="1" x:Name="valuesListBox" BorderThickness="0" SelectionMode="Extended">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="70"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Margin="5,0"/>
                                        <TextBlock Grid.Column="1" Text="{Binding value}" VerticalAlignment="Center" Margin="5,0"/>
                                        <Border Grid.Column="2" Width="50" Height="20" Background="{Binding color}" BorderBrush="Black" BorderThickness="1" Margin="5,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                
                <!-- Options -->
                <StackPanel Grid.Row="3" Margin="5">
                    <TextBlock Text="Right click to show quick menu." Margin="5" FontWeight="Normal" FontStyle="Italic" Foreground="#555555"/>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Override Projection/Cut Lines" VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" x:Name="overrideProjectionCheckbox"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Show Elements in Properties" VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" x:Name="showElementsCheckbox"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Keep color overrides in view when exiting" VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" x:Name="keepOverridesCheckbox"/>
                    </Grid>
                    
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Add View Filters" Margin="5,5" x:Name="addFiltersButton"/>
                        <Button Grid.Column="1" Content="Remove View Filters" Margin="5,5" x:Name="removeFiltersButton"/>
                    </Grid>
                    
                    <Button Content="Apply Colors" Background="#e0ffe0" Margin="5,10" x:Name="applyButton"/>
                    <Button Content="Reset Colors" Background="#ffe0e0" Margin="5,0" x:Name="resetButton"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" BorderThickness="0,1,0,0" BorderBrush="#CCCCCC" Background="#F0F0F0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="80">
                <TextBlock x:Name="statusText" Margin="10,5" FontWeight="Normal" TextWrapping="Wrap" Foreground="#555555" FontSize="12"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window> 