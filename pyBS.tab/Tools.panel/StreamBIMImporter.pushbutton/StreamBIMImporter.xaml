<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StreamBIM Property Importer" Width="600" Height="650" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="StreamBIM Property Importer" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Import properties from StreamBIM to Revit elements" Margin="0,0,0,15"/>
        </StackPanel>

        <!-- Main Content with TabControl -->
        <TabControl Grid.Row="1" x:Name="tabControl">
            <!-- Login Tab -->
            <TabItem Header="1. Login" x:Name="loginTab">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Server URL:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,10"/>
                    <TextBox x:Name="serverUrlTextBox" Grid.Row="0" Grid.Column="1" Margin="0,10,0,10" Text="https://app.streambim.com"/>

                    <TextBlock Text="Username:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,10"/>
                    <TextBox x:Name="usernameTextBox" Grid.Row="1" Grid.Column="1" Margin="0,10,0,10"/>

                    <TextBlock Text="Password:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,10"/>
                    <PasswordBox x:Name="passwordBox" Grid.Row="2" Grid.Column="1" Margin="0,10,0,10"/>

                    <Button x:Name="loginButton" Content="Login" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Width="100" Height="30" Margin="0,10,0,10"/>
                    
                    <TextBlock x:Name="loginStatusTextBlock" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0"/>
                </Grid>
            </TabItem>

            <!-- Project Selection Tab -->
            <TabItem Header="2. Select Project" x:Name="projectTab" IsEnabled="False">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Select a StreamBIM Project:" Grid.Row="0" Margin="0,0,0,10"/>
                    <ListView x:Name="projectsListView" Grid.Row="1" Margin="0,0,0,10" SelectionMode="Single">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                                <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="300"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="selectProjectButton" Content="Select Project" Grid.Row="2" HorizontalAlignment="Left" Width="120" Height="30"/>
                </Grid>
            </TabItem>

            <!-- Checklist Selection Tab -->
            <TabItem Header="3. Select Checklist" x:Name="checklistTab" IsEnabled="False">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Select a StreamBIM Checklist:" Grid.Row="0" Margin="0,0,0,10"/>
                    <ListView x:Name="checklistsListView" Grid.Row="1" Margin="0,0,0,10" SelectionMode="Single">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="450"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="selectChecklistButton" Content="Select Checklist" Grid.Row="2" HorizontalAlignment="Left" Width="120" Height="30"/>
                </Grid>
            </TabItem>

            <!-- Parameter Selection Tab -->
            <TabItem Header="4. Select Parameters" x:Name="parameterTab" IsEnabled="False">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="StreamBIM Properties:" Grid.Row="0" Grid.Column="0" Margin="0,10,0,5"/>
                    <ComboBox x:Name="streamBIMPropertiesComboBox" Grid.Row="0" Grid.Column="1" Margin="0,10,0,5"/>
                    
                    <TextBlock Text="Preview Values:" Grid.Row="1" Grid.Column="0" Margin="0,15,0,5"/>
                    <TextBlock x:Name="previewValuesTextBlock" Grid.Row="1" Grid.Column="1" Margin="0,15,0,5" TextWrapping="Wrap"/>
                    
                    <TextBlock Text="Revit Parameter:" Grid.Row="2" Grid.Column="0" Margin="0,15,0,5"/>
                    <ComboBox x:Name="revitParametersComboBox" Grid.Row="2" Grid.Column="1" Margin="0,15,0,5"/>
                    
                    <CheckBox x:Name="onlyVisibleElementsCheckBox" Content="Only Apply to Visible Elements" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,15,0,5" IsChecked="True"/>
                    
                    <TextBlock Text="Summary:" Grid.Row="4" Grid.Column="0" Margin="0,15,0,5"/>
                    <TextBlock x:Name="summaryTextBlock" Grid.Row="4" Grid.Column="1" Margin="0,15,0,5" TextWrapping="Wrap" 
                              Text="No parameters selected yet."/>
                    
                    <Button x:Name="importButton" Content="Import Values" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="120" Height="30" Margin="0,15,0,0"/>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="statusTextBlock" Text="Ready" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window> 