<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Color Elements" 
    Height="700" 
    Width="500"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    ShowInTaskbar="True"
    Background="{DynamicResource WindowBackgroundBrush}">
    
    <!-- Styles will be loaded programmatically -->
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Busy Indicator Overlay -->
        <Border x:Name="busyOverlay" Style="{DynamicResource BusyOverlayStyle}">
            <StackPanel Style="{DynamicResource BusyContentStyle}">
                <ProgressBar x:Name="busyProgressBar" Style="{DynamicResource BusyProgressBarStyle}"/>
                <TextBlock x:Name="busyTextBlock" Style="{DynamicResource BusyTextBlockStyle}" Text="Loading..."/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Categories -->
            <Border Style="{DynamicResource PanelBorderStyle}" Margin="10,5,5,5">
                <DockPanel>
                    <TextBlock Text="Select categories" Style="{DynamicResource SubheaderTextBlockStyle}" DockPanel.Dock="Top" Margin="5"/>
                    <CheckBox x:Name="selectAllCategoriesCheckBox" Content="Select All" Style="{DynamicResource StandardCheckBoxStyle}" Margin="5,0,5,5" DockPanel.Dock="Top" IsThreeState="True" VerticalAlignment="Center" VerticalContentAlignment="Center" Checked="SelectAllCategories_Changed" Unchecked="SelectAllCategories_Changed" Indeterminate="SelectAllCategories_Changed"/>
                    <ListBox x:Name="categoryListBox" Style="{DynamicResource StandardListBoxStyle}" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Background="Transparent" VerticalAlignment="Center">
                                    <CheckBox Content="{Binding name}" Tag="{Binding}" IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0" Padding="0,0,0,1" VerticalAlignment="Center" VerticalContentAlignment="Center" Foreground="{DynamicResource TextBrush}" Style="{DynamicResource StandardCheckBoxStyle}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </DockPanel>
            </Border>
            
            <!-- Right Panel - Parameters and Values -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Parameter Type Selection -->
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <RadioButton x:Name="instanceRadioButton" Content="Instance" IsChecked="True" GroupName="ParameterType" Style="{DynamicResource SegmentedRadioButtonFirstStyle}"/>
                    <RadioButton x:Name="typeRadioButton" Content="Type" GroupName="ParameterType" Style="{DynamicResource SegmentedRadioButtonLastStyle}"/>
                </StackPanel>
                
                <!-- Parameter Selection -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="parameterSelector" Style="{DynamicResource SearchableComboBoxStyle}" Tag="Select parameter...">
                    </ComboBox>
                    <Button Grid.Column="1" Width="30" Height="30" Margin="4,0,0,0" Padding="0" ToolTip="Refresh Parameters" x:Name="refreshParametersButton" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Image x:Name="refreshParametersImage" Stretch="Uniform" Width="30" Height="30"/>
                    </Button>
                </Grid>
                
                <!-- Values and Colors -->
                <Border Grid.Row="2" Style="{DynamicResource PanelBorderStyle}" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Border Grid.Row="0" Style="{DynamicResource HeaderBorderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" Margin="10,5" x:Name="headerCheckBox" Checked="HeaderCheckBox_Changed" Unchecked="HeaderCheckBox_Changed" Style="{DynamicResource StandardCheckBoxStyle}"/>
                                <TextBlock Grid.Column="1" Text="Value" Style="{DynamicResource LabelTextBlockStyle}" Margin="5"/>
                                <TextBlock Grid.Column="2" Text="Color" Style="{DynamicResource LabelTextBlockStyle}" Margin="5"/>
                            </Grid>
                        </Border>
                        
                        <!-- Values -->
                        <ListBox Grid.Row="1" x:Name="valuesListBox" Style="{DynamicResource StandardListBoxStyle}" BorderThickness="0" SelectionMode="Extended" HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="35"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="70"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Grid.Column="0" Margin="0,0" IsChecked="{Binding IsChecked, Mode=TwoWay}" Checked="ValueCheckbox_Changed" Unchecked="ValueCheckbox_Changed"/>
                                        <TextBlock Grid.Column="1" Text="{Binding value}" VerticalAlignment="Center" Margin="5,0" Foreground="{DynamicResource TextBrush}"/>
                                        <Border Grid.Column="2" Width="50" Height="20" Background="{Binding color}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" HorizontalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                
                <!-- Options -->
                <StackPanel Grid.Row="3" Margin="5">

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Override Projection/Cut Lines" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                        <CheckBox Grid.Column="1" Style="{DynamicResource ToggleSwitchStyle}" x:Name="overrideProjectionCheckbox"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Select Elements in Properties" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                        <CheckBox Grid.Column="1" Style="{DynamicResource ToggleSwitchStyle}" x:Name="showElementsCheckbox"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Reset Colors" Style="{DynamicResource StandardButtonStyle}" Margin="5,10" x:Name="resetButton"/>
                        <Button Grid.Column="1" Content="Apply Colors" Style="{DynamicResource SuccessButtonStyle}" Margin="5,10" x:Name="applyButton"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window> 