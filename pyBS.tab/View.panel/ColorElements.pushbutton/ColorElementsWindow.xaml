<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Color Elements" 
    Height="700" 
    Width="450"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    ShowInTaskbar="True">
    
    <!-- Styles will be loaded programmatically -->
    
    <Grid>
        <!-- Busy Indicator Overlay -->
        <Border x:Name="busyOverlay" Style="{StaticResource BusyOverlayStyle}">
            <StackPanel Style="{StaticResource BusyContentStyle}">
                <ProgressBar x:Name="busyProgressBar" Style="{StaticResource BusyProgressBarStyle}"/>
                <TextBlock x:Name="busyTextBlock" Style="{StaticResource BusyTextBlockStyle}" Text="Loading..."/>
            </StackPanel>
        </Border>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" MinHeight="50"/>
        </Grid.RowDefinitions>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Categories -->
            <Border Style="{StaticResource PanelBorderStyle}" Margin="10,5,5,5">
                <DockPanel>
                    <TextBlock Text="Category" Style="{StaticResource SubheaderTextBlockStyle}" DockPanel.Dock="Top" Margin="5"/>
                    <CheckBox x:Name="selectAllCategoriesCheckBox" Content="Select All" Style="{StaticResource StandardCheckBoxStyle}" Margin="5,0,5,5" DockPanel.Dock="Top" IsThreeState="True" Checked="SelectAllCategories_Changed" Unchecked="SelectAllCategories_Changed" Indeterminate="SelectAllCategories_Changed"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="categoryListBox" Style="{StaticResource StandardListBoxStyle}" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="Transparent">
                                        <CheckBox Content="{Binding name}" Tag="{Binding}" IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="2,0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </ScrollViewer>
                </DockPanel>
            </Border>
            
            <!-- Right Panel - Parameters and Values -->
            <Grid Grid.Column="1" Margin="5,5,10,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Parameter Type Selection -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <RadioButton x:Name="instanceRadioButton" Content="Instance" IsChecked="True" Style="{StaticResource StandardRadioButtonStyle}"/>
                    <RadioButton x:Name="typeRadioButton" Content="Type" Style="{StaticResource StandardRadioButtonStyle}" Margin="15,5,5,5"/>
                </StackPanel>
                
                <!-- Parameter Selection -->
                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="parameterSelector" Style="{StaticResource StandardComboBoxStyle}" Margin="0"/>
                    <Button Grid.Column="1" Content="ðŸ”„" Width="40" Margin="0,0,0,0" ToolTip="Refresh Parameters" x:Name="refreshParametersButton" Style="{StaticResource SecondaryButtonStyle}"/>
                </Grid>
                
                <!-- Values and Colors -->
                <Border Grid.Row="2" Style="{StaticResource PanelBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Border Grid.Row="0" Style="{StaticResource HeaderBorderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" Margin="10,5" x:Name="headerCheckBox" Checked="HeaderCheckBox_Changed" Unchecked="HeaderCheckBox_Changed" Style="{StaticResource StandardCheckBoxStyle}"/>
                                <TextBlock Grid.Column="1" Text="Value" Style="{StaticResource LabelTextBlockStyle}" Margin="5"/>
                                <TextBlock Grid.Column="2" Text="Color" Style="{StaticResource LabelTextBlockStyle}" Margin="5"/>
                            </Grid>
                        </Border>
                        
                        <!-- Values -->
                        <ListBox Grid.Row="1" x:Name="valuesListBox" Style="{StaticResource StandardListBoxStyle}" BorderThickness="0" SelectionMode="Extended" HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="35"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="70"/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Grid.Column="0" Margin="0,0" IsChecked="{Binding IsChecked, Mode=TwoWay}" Checked="ValueCheckbox_Changed" Unchecked="ValueCheckbox_Changed"/>
                                        <TextBlock Grid.Column="1" Text="{Binding value}" VerticalAlignment="Center" Margin="5,0"/>
                                        <Border Grid.Column="2" Width="50" Height="20" Background="{Binding color}" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                
                <!-- Options -->
                <StackPanel Grid.Row="3" Margin="5">

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Override Projection/Cut Lines" VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" x:Name="overrideProjectionCheckbox"/>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Select Elements in Properties" VerticalAlignment="Center"/>
                        <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" x:Name="showElementsCheckbox"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Reset Colors" Style="{StaticResource DangerButtonStyle}" Margin="5,0" x:Name="resetButton"/>
                        <Button Grid.Column="1" Content="Apply Colors" Style="{StaticResource SuccessButtonStyle}" Margin="5,10" x:Name="applyButton"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Style="{StaticResource StandardStatusBarStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="80">
                <TextBlock x:Name="statusText" Style="{StaticResource StatusTextBlockStyle}"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window> 