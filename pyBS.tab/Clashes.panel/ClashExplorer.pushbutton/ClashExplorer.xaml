<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clash Explorer" Width="1000" Height="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Clash Explorer" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Visualize and interact with clash detection results" Margin="0,0,0,15"/>
        </StackPanel>

        <!-- Main Content with TabControl -->
        <TabControl Grid.Row="1" x:Name="tabControl">
            <!-- Settings Tab -->
            <TabItem Header="1. Settings" x:Name="settingsTab">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="API URL:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,10"/>
                    <TextBox x:Name="apiUrlTextBox" Grid.Row="0" Grid.Column="1" Margin="0,10,0,10" 
                             Text="https://api.example.com"/>

                    <TextBlock Text="API Key:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,10"/>
                    <PasswordBox x:Name="apiKeyPasswordBox" Grid.Row="1" Grid.Column="1" Margin="0,10,0,10"/>

                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,10">
                        <Button x:Name="saveSettingsButton" Content="Save Settings" Width="120" Height="30" Margin="0,0,10,0"/>
                        <Button x:Name="loadClashTestsButton" Content="Load Clash Sets" Width="120" Height="30"/>
                    </StackPanel>
                    
                    <TextBlock x:Name="settingsStatusTextBlock" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                               Margin="0,10,0,0" TextWrapping="Wrap"/>
                </Grid>
            </TabItem>

            <!-- Clash Sets Tab -->
            <TabItem Header="2. Clash Sets" x:Name="clashTestsTab" IsEnabled="False">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Select a Clash Set (from ifcclash JSON):" Grid.Row="0" Margin="0,0,0,10"/>
                    
                    <DataGrid x:Name="clashTestsDataGrid" Grid.Row="1" Margin="0,0,0,10" 
                              AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Clash Set Name" Binding="{Binding Name}" Width="300"/>
                            <DataGridTextColumn Header="Total Clashes" Binding="{Binding TotalClashes}" Width="100"/>
                            <DataGridTextColumn Header="Mode" Binding="{Binding Mode}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <Button x:Name="selectClashTestButton" Content="Select Clash Set" Grid.Row="2" 
                            HorizontalAlignment="Left" Width="150" Height="30"/>
                </Grid>
            </TabItem>

            <!-- Clash Groups Tab -->
            <TabItem Header="3. Clash Groups" x:Name="clashGroupsTab" IsEnabled="False">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Margin="0,0,0,10">
                        <Run Text="Clash Groups for: " FontWeight="Bold"/>
                        <Run x:Name="selectedTestNameRun" Text="None" FontStyle="Italic"/>
                    </TextBlock>
                    
                    <!-- Filter and Group Controls -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="Filter by Category:" Grid.Row="0" Grid.Column="0" 
                                   VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <ComboBox x:Name="categoryFilterComboBox" Grid.Row="0" Grid.Column="1" 
                                  Margin="0,5,10,5"/>
                        
                        <TextBlock Text="Filter by Level:" Grid.Row="0" Grid.Column="2" 
                                   VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <ComboBox x:Name="levelFilterComboBox" Grid.Row="0" Grid.Column="3" 
                                  Margin="0,5,0,5"/>
                        
                        <TextBlock Text="Group by:" Grid.Row="1" Grid.Column="0" 
                                   VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <ComboBox x:Name="groupByComboBox" Grid.Row="1" Grid.Column="1" 
                                  Margin="0,5,10,5" SelectedIndex="0">
                            <ComboBoxItem Content="None"/>
                            <ComboBoxItem Content="Category"/>
                            <ComboBoxItem Content="Level"/>
                            <ComboBoxItem Content="Category + Level"/>
                        </ComboBox>
                        
                        <Button x:Name="applyFiltersButton" Content="Apply Filters" 
                                Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                                Width="120" Height="30" HorizontalAlignment="Left" Margin="0,5,0,5"/>
                    </Grid>
                    
                    <!-- Clash Groups Table with multi-level grouping support -->
                    <DataGrid x:Name="clashGroupsDataGrid" Grid.Row="2" Margin="0,0,0,0" 
                              AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                              CanUserSortColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Group Name" Binding="{Binding GroupName}" Width="250"/>
                            <DataGridTextColumn Header="Clash Count" Binding="{Binding ClashCount}" Width="100"/>
                            <DataGridTextColumn Header="Category A" Binding="{Binding CategoryA}" Width="150"/>
                            <DataGridTextColumn Header="Category B" Binding="{Binding CategoryB}" Width="150"/>
                            <DataGridTextColumn Header="Level A" Binding="{Binding LevelA}" Width="100"/>
                            <DataGridTextColumn Header="Level B" Binding="{Binding LevelB}" Width="100"/>
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Highlight" Tag="{Binding}" Click="highlight_button_click" 
                                                Width="80" Height="25"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Clash Details Tab -->
            <TabItem Header="4. Clash Details" x:Name="clashDetailsTab" IsEnabled="False">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Margin="0,0,0,10">
                        <Run Text="Clashes in Group: " FontWeight="Bold"/>
                        <Run x:Name="selectedGroupNameRun" Text="None" FontStyle="Italic"/>
                    </TextBlock>
                    
                    <DataGrid x:Name="clashDetailsDataGrid" Grid.Row="1" Margin="0,0,0,10" 
                              AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Clash ID" Binding="{Binding ClashId}" Width="80"/>
                            <DataGridTextColumn Header="Element A" Binding="{Binding ElementA}" Width="150"/>
                            <DataGridTextColumn Header="Element B" Binding="{Binding ElementB}" Width="150"/>
                            <DataGridTextColumn Header="Category A" Binding="{Binding CategoryA}" Width="120"/>
                            <DataGridTextColumn Header="Category B" Binding="{Binding CategoryB}" Width="120"/>
                            <DataGridTextColumn Header="Distance" Binding="{Binding Distance}" Width="80"/>
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Highlight" Tag="{Binding}" Click="highlight_clash_button_click" 
                                                Width="80" Height="25"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <Button x:Name="highlightAllButton" Content="Highlight All in Group" Width="150" Height="30" Margin="0,0,10,0"/>
                        <Button x:Name="exportButton" Content="Export to Excel" Width="120" Height="30"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="statusTextBlock" Text="Ready" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar x:Name="progressBar" Width="200" Height="16" Visibility="Collapsed"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
