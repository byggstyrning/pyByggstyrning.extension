<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StreamBIM Checklist Importer" Width="600" Height="800" WindowStartupLocation="CenterScreen">
    <!-- Styles will be loaded programmatically -->
    <Grid Margin="{DynamicResource GridMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Busy Indicator Overlay -->
        <Border x:Name="busyOverlay" Style="{DynamicResource BusyOverlayStyle}">
            <StackPanel Style="{DynamicResource BusyContentStyle}">
                <ProgressBar x:Name="busyProgressBar" Style="{DynamicResource BusyProgressBarStyle}"/>
                <TextBlock x:Name="busyTextBlock" Style="{DynamicResource BusyTextBlockStyle}" Text="Loading..."/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="0">
            <TextBlock Text="StreamBIM Checklist Importer" FontSize="16" FontWeight="Bold" Style="{DynamicResource HeaderTextBlockStyle}"/>
            <TextBlock Text="Import properties from StreamBIM to Revit instance parameters" Style="{DynamicResource BodyTextBlockStyle}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content with TabControl -->
        <TabControl Grid.Row="1" x:Name="tabControl">
            <!-- Login Tab -->
            <TabItem Header="1. Login" x:Name="loginTab">
                <Grid Margin="{DynamicResource GridMargin}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Server Region:" Grid.Row="0" Grid.Column="0" Style="{DynamicResource LabelTextBlockStyle}"/>
                    <ComboBox x:Name="serverRegionComboBox" Grid.Row="0" Grid.Column="1" Style="{DynamicResource StandardComboBoxStyle}" SelectionChanged="server_region_selection_changed"/>

                    <TextBlock x:Name="customUrlLabel" Text="Custom URL:" Grid.Row="1" Grid.Column="0" Style="{DynamicResource LabelTextBlockStyle}" Visibility="Collapsed"/>
                    <TextBox x:Name="customUrlTextBox" Grid.Row="1" Grid.Column="1" Style="{DynamicResource PlaceholderTextBoxStyle}" Tag="Enter custom StreamBIM server URL" Visibility="Collapsed"/>

                    <TextBlock Text="Username:" Grid.Row="2" Grid.Column="0" Style="{DynamicResource LabelTextBlockStyle}"/>
                    <TextBox x:Name="usernameTextBox" Grid.Row="2" Grid.Column="1" Style="{DynamicResource PlaceholderTextBoxStyle}" Tag="Enter username"/>

                    <TextBlock Text="Password:" Grid.Row="3" Grid.Column="0" Style="{DynamicResource LabelTextBlockStyle}"/>
                    <PasswordBox x:Name="passwordBox" Grid.Row="3" Grid.Column="1" Style="{DynamicResource PlaceholderPasswordBoxStyle}"/>

                    <TextBlock x:Name="mfaCodeLabel" Text="MFA Code:" Grid.Row="4" Grid.Column="0" Style="{DynamicResource LabelTextBlockStyle}" Visibility="Collapsed"/>
                    <TextBox x:Name="mfaCodeTextBox" Grid.Row="4" Grid.Column="1" Style="{DynamicResource PlaceholderTextBoxStyle}" Tag="Enter MFA verification code" Visibility="Collapsed"/>

                    <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="{DynamicResource StackPanelMargin}">
                        <Button x:Name="loginButton" Content="Login" Width="100" Height="30" Margin="0,0,10,0" Style="{DynamicResource StandardButtonStyle}"/>
                        <Button x:Name="verifyMfaButton" Content="Verify MFA" Width="100" Height="30" Margin="0,0,10,0" Visibility="Collapsed" Style="{DynamicResource StandardButtonStyle}"/>
                        <Button x:Name="logoutButton" Content="Logout" Width="100" Height="30" IsEnabled="False" Style="{DynamicResource SecondaryButtonStyle}"/>
                    </StackPanel>
                    
                    <TextBlock x:Name="loginStatusTextBlock" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource StatusTextBlockStyle}"/>
                </Grid>
            </TabItem>

            <!-- Project Selection Tab -->
            <TabItem Header="2. Select Project" x:Name="projectTab" IsEnabled="False">
                <Grid Margin="{DynamicResource GridMargin}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Select a StreamBIM Project:" Grid.Row="0" Style="{DynamicResource SubheaderTextBlockStyle}"/>
                    <ListView x:Name="projectsListView" Grid.Row="1" Style="{DynamicResource StandardListBoxStyle}" SelectionMode="Single" MouseDoubleClick="projects_list_double_click">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                                <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="300"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="selectProjectButton" Content="Select Project" Grid.Row="2" HorizontalAlignment="Left" Width="120" Height="30"/>
                </Grid>
            </TabItem>

            <!-- Checklist Selection Tab -->
            <TabItem Header="3. Select Checklist" x:Name="checklistTab" IsEnabled="False">
                <Grid Margin="{DynamicResource GridMargin}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Select a StreamBIM Checklist:" Grid.Row="0" Style="{DynamicResource SubheaderTextBlockStyle}"/>
                    
                    <!-- Search Bar -->
                    <Grid Grid.Row="1" Margin="{DynamicResource TextBlockBottomMargin}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Search:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox x:Name="checklistSearchBox" Grid.Column="1" Style="{DynamicResource PlaceholderTextBoxStyle}" Tag="Type to search checklists..."/>
                    </Grid>
                    
                    <ListView x:Name="checklistsListView" Grid.Row="2" Style="{DynamicResource StandardListBoxStyle}" SelectionMode="Single" MouseDoubleClick="checklists_list_double_click">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="450"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="selectChecklistButton" Content="Select Checklist" Grid.Row="3" HorizontalAlignment="Left" Width="120" Height="30"/>
                </Grid>
            </TabItem>

            <!-- Parameter Selection Tab -->
            <TabItem Header="4. Select Parameters" x:Name="parameterTab" IsEnabled="False">
                <Grid Margin="{DynamicResource GridMargin}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Selected StreamBIM Checklist:" Grid.Row="0" Grid.Column="0" Style="{DynamicResource LabelTextBlockStyle}"/>
                    <TextBlock x:Name="selectedChecklistTextBlock" Grid.Row="0" Grid.Column="1" Style="{DynamicResource SecondaryTextBlockStyle}" Margin="0,5,0,0"/>
                    
                    <TextBlock Text="StreamBIM Properties:" Grid.Row="1" Grid.Column="0" Style="{DynamicResource LabelTextBlockStyle}"/>
                    <ComboBox x:Name="streamBIMPropertiesComboBox" Grid.Row="1" Grid.Column="1" Style="{DynamicResource StandardComboBoxStyle}"/>
                    
                    <TextBlock Text="Preview Values:" Grid.Row="2" Grid.Column="0" Style="{DynamicResource SecondaryTextBlockStyle}"/>
                    <TextBlock x:Name="previewValuesTextBlock" Grid.Row="2" Grid.Column="1" Style="{DynamicResource SecondaryTextBlockStyle}"/>
                    
                    <TextBlock Text="Revit Instance Parameters:" Grid.Row="3" Grid.Column="0" Style="{DynamicResource LabelTextBlockStyle}"/>
                    <TextBlock Text="(From visible elements)" Grid.Row="3" Grid.Column="0" Style="{DynamicResource SecondaryTextBlockStyle}" Margin="0,20,0,0"/>
                    <ComboBox x:Name="revitParametersComboBox" Grid.Row="3" Grid.Column="1" Style="{DynamicResource StandardComboBoxStyle}"/>
                    
                    
                    
                    <CheckBox x:Name="onlyVisibleElementsCheckBox" Content="Only Apply to Visible Elements" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource StandardCheckBoxStyle}" IsChecked="True" Visibility="Collapsed" />
                    
                    <TextBlock Text="Summary:" Grid.Row="5" Grid.Column="0" Style="{DynamicResource LabelTextBlockStyle}"/>
                    <TextBlock x:Name="summaryTextBlock" Grid.Row="5" Grid.Column="1" Style="{DynamicResource BodyTextBlockStyle}" 
                              Text="No parameters selected yet."/>
                    
                    <!-- Parameter Mapping Section -->
                    <CheckBox x:Name="enableMappingCheckBox" Content="Enable Parameter Mapping" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource StandardCheckBoxStyle}" IsChecked="False" />
                    <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,25,0,0" x:Name="mappingGrid" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Parameter Mapping" Grid.Row="0" Style="{DynamicResource SubheaderTextBlockStyle}"/>
                        
                        <DataGrid x:Name="mappingDataGrid" Grid.Row="1" Style="{DynamicResource StandardDataGridStyle}" AutoGenerateColumns="False" 
                                  CanUserAddRows="True" CanUserDeleteRows="True" Height="150">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Checklist Value" 
                                                  Binding="{Binding ChecklistValue, UpdateSourceTrigger=PropertyChanged}" 
                                                  Width="*"/>
                                <DataGridTextColumn Header="Revit Value" 
                                                  Binding="{Binding RevitValue, UpdateSourceTrigger=PropertyChanged}" 
                                                  Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="{DynamicResource StackPanelMargin}">
                            <Button x:Name="addNewRowButton" Content="Add new row" Width="120" Height="30" Style="{DynamicResource StandardButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                    
                    <ProgressBar x:Name="progressBar" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Height="20" Margin="{DynamicResource TextBlockBottomMargin}" Visibility="Collapsed"/>
                    <TextBlock x:Name="progressText" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Style="{DynamicResource StatusTextBlockStyle}" TextAlignment="Center" Visibility="Collapsed"/>

                    <Separator Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Height="2" Margin="{DynamicResource TextBlockBottomMargin}" HorizontalAlignment="Stretch" Background="Gray" />
                    
                    <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="{DynamicResource StackPanelMargin}">
                        <Button x:Name="saveMappingButton" Content="Save Mapping" Width="120" Height="30" Style="{DynamicResource StandardButtonStyle}"/>
                        <Button x:Name="importButton" Content="Import Values" Width="120" Height="30" Style="{DynamicResource StandardButtonStyle}"/>
                        <Button x:Name="isolateButton" Content="Isolate Updated Elements" Width="150" Height="30" IsEnabled="False" Style="{DynamicResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="statusTextBlock" Text="Ready" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window> 