<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Parameter Mapping" Width="600" Height="500" WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../../../../lib/styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="ListBoxItem">
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="13"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Source Parameter" Grid.Row="0" Grid.Column="0" Style="{StaticResource SubheaderTextBlockStyle}" HorizontalAlignment="Center"/>
        <TextBlock Text="Target Parameter" Grid.Row="0" Grid.Column="1" Style="{StaticResource SubheaderTextBlockStyle}" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="sourceFilterTextBox" Grid.Row="0" Margin="0,0,0,5" Style="{StaticResource PlaceholderTextBoxStyle}" Tag="Filter parameters..."/>
            <ListBox x:Name="sourceParameterListBox" Grid.Row="1" SelectionMode="Single" Style="{StaticResource StandardListBoxStyle}"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="targetFilterTextBox" Grid.Row="0" Margin="0,0,0,5" Style="{StaticResource PlaceholderTextBoxStyle}" Tag="Filter parameters..."/>
            <ListBox x:Name="targetParameterListBox" Grid.Row="1" SelectionMode="Single" Style="{StaticResource StandardListBoxStyle}"/>
        </Grid>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="okButton" Content="OK" Width="80" Height="30" Margin="0,0,10,0" IsDefault="True" Style="{StaticResource StandardButtonStyle}"/>
            <Button x:Name="cancelButton" Content="Cancel" Width="80" Height="30" IsCancel="True" Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>


